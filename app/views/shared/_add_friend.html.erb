<% if user != current_user %>
  <% if user.add_friend?(current_user) %>
    <%= link_to 'Cancel friend', friendship_path(user), method: :delete, class: "btn btn-default" %>
  <% else%>
    <%= link_to 'Add Friend', friendships_path(friend_id: user), method: :post, class: "btn btn-success", "data-toggle" => "tooltip", "title" => "Add friend?" %>
  <% end %>
<% end %>