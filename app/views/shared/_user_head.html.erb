<div class="user-head" >
  <div class="col-md-12">
    <div class="p-4"></div>
      <div class="head-title p-5">
        <div style="float:left">
          <%= image_tag @user.avatar, class: "user-avatar img-thumbnail" if @user.avatar? %>
          <h4><%= @user.name %></h4>
        </div>
        <p><%= @user.introduction %></p>
        <% if @user.email == current_user.email %>
          <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-success user-edit-button", style: "float:right" %>
        <% end %>
      </div>
  </div>
</div>
<br/>
<ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
  <li class="nav-item"><%= link_to "My Post", posts_user_path, class: "nav-link #{'active' if @posts.present? }" %></li>
  <li class="nav-item"><%= link_to "My Comment", comments_user_path, class: "nav-link #{'active' if @comments.present? }" %></li>
  <li class="nav-item"><%= link_to "My Collect", collects_user_path, class: "nav-link #{'active' if @collects.present? }" %></li>
  <% if @user == current_user %>
    <li class="nav-item"><%= link_to "My Draft", drafts_user_path, class: "nav-link #{'active' if @drafts.present? }" %></li>  
  <% else %>
    <li class="nav-item nav-link disabled" href="#">My Draft</li>
  <% end %>
  <li class="nav-item"><%= link_to "My Friend", friends_user_path, class: "nav-link #{'active' if @friends.present? }" %></li>
</ul>