<div class="post-index" >
  <div class="admin-head col-md-12">
    <div class="p-4"></div>
      <div class="head-title p-5">
        <h1>Dojo Forum</h1>          
      </div>
  </div>
</div>
<div class="container">
  <div class="row">

    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item"><%= link_to "All", root_path, class: "nav-link active" %></li>
        <% @categories.each do |category| %>
          <li class="nav-item"><%= link_to category.name, category_path(category), class: "nav-link" %></li>
        <% end %>
    </ul>  
    <br>

    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Replies count</th>
          <th scope="col">Title</th>
          <th scope="col">Last replied at</th>
          <th scope="col">Viewed count</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <th scope="row"><%= post.replies_count %></th>
          <td><%= post.title %></td>
          <td><% if post.replies.present? %>
                <%= post.replies.last.created_at %>
              <% end %></td>
          <td><%= post.viewed_count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div>