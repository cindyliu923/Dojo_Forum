<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 col-md-6 col-lg-4 p-2">
      <div class="p-5"></div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email",style: "width:100%" %>
          </div>
          <br/>
          <div class="field">
            <%= f.password_field :password, placeholder: "password", autocomplete: "off",style: "width:100%" %>
          </div>
          <br />
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-light btn-lg", style: "float:right" %>
          </div>
        <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
