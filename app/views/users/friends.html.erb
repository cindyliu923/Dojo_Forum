<%= render partial: "shared/user_head" %>
 <div class="container">
  <div class="row">
    <div class="col-12">
      <h4 class="text-center">Waiting for response</h4>
    </div>
    <% @wait_friends.each do |friend| %>
    <div class="col">
      <%= image_tag friend.avatar, class: "friend-avatar img-thumbnail" if friend.avatar? %>
      <h5><%= friend.name %></h5>
    </div>
    <% end %>
  </div>
</div>
<hr/>
 <div class="container">
  <div class="row">
    <% @unconfirm_friends.each do |friend| %>
    <div class="col">
      <%= image_tag friend.avatar, class: "friend-avatar img-thumbnail" if friend.avatar? %>
      <h5><%= friend.name %></h5>
    </div>
    <% end %>
  </div>
</div>
 <div class="container">
  <div class="row">
    <% @friends.each do |friend| %>
    <div class="col">
      <%= image_tag friend.avatar, class: "friend-avatar img-thumbnail" if friend.avatar? %>
      <h5><%= friend.name %></h5>
    </div>
    <% end %>
  </div>
</div>