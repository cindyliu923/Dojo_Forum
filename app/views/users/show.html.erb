<div class="post-index" >
  <div class="admin-head col-md-12">
    <div class="p-4"></div>
      <div class="head-title p-5">
        <%= image_tag @user.avatar, class: "user-avatar img-thumbnail" if @user.avatar? %>
        <h4><%= @user.name %></h4>
        <p><%= @user.introduction %></p>
        <% if @user.email == current_user.email %>
          <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-success", style: "float:right" %>
        <% end %>
      </div>
  </div>
</div>
